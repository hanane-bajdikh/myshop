{% extends "base.html.twig" %}

{% block title %}
  {{ parent() }} {{ produit.designation }}
{% endblock %}

{% block contenu %}
  <div class="container my-5">
    <div class="row">
      <div class="col-md-6 text-center">
        {% if produit.image is not empty %}
          <img src="public/images/{{ produit.image }}" alt="{{ produit.designation }}" class="img-fluid" style="max-height: 300px;">
        {% else %}
          <div class="text-muted">Pas d’image</div>
        {% endif %}
      </div>
      <div class="col-md-6">
        <h2>{{ produit.designation }}</h2>
        <p><strong>Prix :</strong> {{ produit.prix }} €</p>
        <p><strong>Description :</strong><br>{{ produit.description }}</p>

        <form method="post" action="index.php?page=ajouterPanier">
          <input type="hidden" name="idProduit" value="{{ produit.id }}">
          <div class="mb-3">
            <label for="quantite" class="form-label">Quantité :</label>
            <input type="number" id="quantite" name="quantite" value="1" min="1" class="form-control" style="width: 100px;">
          </div>
          <button type="submit" class="btn btn-success">Ajouter au panier</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
